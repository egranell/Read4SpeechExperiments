<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="General Settings">
        <EditTextPreference
            android:id="@+id/audioPath"
            android:key="audioPath"
            android:summary="Directory for the recorded audio files."
            android:title="Recorded audio directory" />

        <EditTextPreference
            android:id="@+id/name"
            android:key="name"
            android:summary="The name of the speaker."
            android:title="Speaker name" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="images"
            android:summary="Show the text line images to read if available."
            android:title="Show images" />
