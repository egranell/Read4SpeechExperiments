    <PreferenceCategory android:title="Mandatory sentences">
        <EditTextPreference
            android:id="@+id/mandatorySentences"
            android:key="mandatoryFile"
            android:summary="Absolute path to the file containing the mandatory sentences."
            android:title="Mandatory sentences file" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Optional sentences">
        <EditTextPreference
            android:id="@+id/optionalSentences"
            android:key="optionalFile"
            android:summary="Absolute path to the file containing the Optional sentences."
            android:title="Optional sentences file" />
        <EditTextPreference
            android:id="@+id/optionalSentencesNumber"
            android:inputType="number"
            android:key="OptionalFileNumber"
            android:summary="Optional sentences"
            android:title="Optional sentences number" />

    </PreferenceCategory>

